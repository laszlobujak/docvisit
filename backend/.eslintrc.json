{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-underscore-dangle":  ["error", { "allow": ["_id"] }],
        "func-names": ["error", "never"],
        "no-use-before-define": ["error", { "variables": false }],
        "no-undef": ["error", { "typeof": true }]
    }
}